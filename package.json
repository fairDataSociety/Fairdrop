{
  "name": "fairdrop-frontend",
  "version": "0.9.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:full": "node tests/mocks/ens-server.js & vite",
    "ens-server": "node tests/mocks/ens-server.js",
    "build": "vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "test:unit": "vitest run --exclude 'tests/smoke/**' --exclude 'tests/integration/**'",
    "test:unit:watch": "vitest --exclude 'tests/smoke/**' --exclude 'tests/integration/**'",
    "test:smoke": "vitest run tests/smoke/",
    "test:all": "vitest run && playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/"
  },
  "dependencies": {
    "@ethersphere/bee-js": "^10.1.1",
    "@noble/secp256k1": "^3.0.0",
    "@reown/appkit": "^1.8.15",
    "@reown/appkit-adapter-ethers": "^1.8.15",
    "axios": "^1.6.0",
    "bootstrap": "^4.6.2",
    "dropzone": "^5.9.3",
    "ethers": "^6.16.0",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.0",
    "qrcode.react": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropdown": "^1.11.0",
    "react-router-dom": "^5.3.4",
    "react-switch": "^7.0.0",
    "react-tooltip": "^5.25.0"
  },
  "devDependencies": {
    "@peculiar/webcrypto": "^1.5.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/react": "^16.3.1",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.3.0",
    "prettier": "^3.7.4",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  }
}
